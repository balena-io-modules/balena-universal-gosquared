{
	"compilerOptions": {
		"module": "commonjs",
		"target": "es2015",
		"moduleResolution": "node",
		"outDir": "build",
		"noUnusedLocals": true,
		"noUnusedParameters": true,
		"preserveConstEnums": true,
		"removeComments": true,
		"strict": true,
		"noImplicitAny": false,
		"allowJs": true,
		"checkJs": true,
		"rootDir": "src",
		"importHelpers": true
	},
	"include": [
		"./src/**/*"
	],
	"exclude": [
		"./vendor/gs-loader.js"
	]
}
